name: DSPipeline

on:
  push:
    branches:
      - main

    
env:
  APPLICATION_NAME: CalculatorAPP
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository_owner }}/CalculatorAPP
  
jobs:
  DockerBuildPublish:
    name: Docker Build & Publish
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v1

      - name: Build Docker Image
        run: docker build . --file Dockerfile --tag $APPLICATION_NAME

      - name: Log in to GitHub Container Registry
        run: echo "${{ secrets.DOCKER_TOKEN }}" | docker login $REGISTRY -u ${{ github.actor }} --password-stdin

      - name: Push Docker Image to GitHub Container Registry
        run: |
          IMAGE_ID=$REGISTRY/$IMAGE_NAME:${{ github.sha }}
          docker tag $APPLICATION_NAME $IMAGE_ID
          docker push $IMAGE_ID

